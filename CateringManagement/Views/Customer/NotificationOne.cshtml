@{
    ViewData["Title"] = "Notification Email";
}

<h1>Notification Email</h1>

<h2>Message to one Selected Customer</h2>
<h5>Note: <strong>you</strong> are the only one who will actually recieve this message.</h5>

<hr />
<form asp-action="NotificationOne">
    <div class="row">
        <div class="col-md-8">
            <div class="text-danger">@ViewData["Message"]</div>
            <hr />
            <div class="form-group">
                <label class="control-label">Select the Customer</label>
                <select id="CustomerID" name="CustomerID" class="form-control"
                        data-val="true" data-val-required="You must select a Customer" asp-items="ViewBag.CustomerID">
                    <option value="">Select the Customer</option>
                </select>
                <span class="text-danger field-validation-valid" data-valmsg-for="CustomerID" data-valmsg-replace="true"></span>
            </div>
            <div class="form-group">
                <label for="Subject" class="control-label">Email Subject</label>
                <input type="text" id="Subject" name="Subject" class="form-control" />
            </div>
            <div class="form-group">
                <label for="emailContent" class="control-label">Message Content</label>
                <textarea id="emailContent" name="emailContent" rows="5" cols="40" class="form-control"></textarea>
            </div>
            <div class="form-group">
                <input type="submit" value="Send" class="btn btn-primary" />
            </div>

        </div>
    </div>
</form>
<div>
    <partial name="_BackToList" />
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

